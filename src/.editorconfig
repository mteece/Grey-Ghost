; EditorConfig is awesome: http://EditorConfig.org

root = true  ; top-most EditorConfig file

; Unix-style newlines with a newline ending every file
[*]
; end_of_line = lf
; insert_final_newline = true

; 4 space indentation
[*.cs]
indent_style = tab
indent_size = 4

; Tab indentation (no size specified)
[*.xaml]
indent_style = tab
indent_size = 4

; Tab indentation (no size specified)
[*.wxs]
indent_style = tab
indent_size = 4