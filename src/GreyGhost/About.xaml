<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xml:lang="en-US"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2006" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="GreyGhost.About"
	x:Name="Window"
	Title="About"
	Width="450" Height="174" Icon="Application.ico" ResizeMode="NoResize">

	<Grid x:Name="LayoutRoot">
		<Label d:LayoutOverrides="Height" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Content="Grey Ghost" FontSize="20" />
		<Rectangle Stroke="{x:Null}" VerticalAlignment="Bottom" Height="50">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.636,0.967" StartPoint="0.636,-0.017">
					<GradientStop Color="#FFFFFFFF" Offset="0"/>
					<GradientStop Color="#CCCCCC" Offset="1"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<Button HorizontalAlignment="Right" Margin="0,0,13.377,14" x:Name="btnOK" VerticalAlignment="Bottom" Width="80" Height="24" Content="OK" Click="CloseWindowClickEvent"/>
		<Label d:LayoutOverrides="Height" Margin="15,40,196.007,59.483" Content="mteece | http://www.github.com/mteece" FontSize="10" Foreground="#000000"/>
	</Grid>
</Window>
